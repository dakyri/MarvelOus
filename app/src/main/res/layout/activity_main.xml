<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mayaswell.marvelous.MainActivity">
    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewAnimator"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:background="@drawable/search_view_bg">
            <TextView
                android:id="@+id/labelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignBottom="@+id/nameView"
                android:text="@string/searchBoxLabel"
                style="@style/LabelText"/>
            <EditText
                android:id="@+id/nameView"
                android:layout_width="@dimen/input_name_view_width"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_bg"
                style="@style/InputText"
                android:layout_alignTop="@+id/goButton"
                android:layout_toRightOf="@+id/labelText"
                android:layout_toEndOf="@+id/labelText"/>
            <Button
                android:id="@+id/goButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/nameView"
                android:background="@drawable/button_back_white"
                android:text="@string/goButtonLabel"
                style="@style/ButtonText"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/goButton"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/listLabelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameView"
                android:layout_marginTop="@dimen/buttGap"
                android:layout_alignParentLeft="true"
                android:text="@string/listLabel"
                style="@style/LabelText"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/cacheListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listLabelText"/>
            <TextView
                android:id="@+id/statusView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/cacheListView"
                android:text=""
                style="@style/StatusText"/>


        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/detailView">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/detailNameView"
                android:text=""
                android:ellipsize="end"
                style="@style/CharacterDetailNameText"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailImageView"
                android:layout_below="@+id/detailNameView"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailDescriptionView"
                android:layout_below="@+id/detailImageView"
                android:text=""
                style="@style/CharacterDetailDescriptionText"
                /></RelativeLayout>
        </ScrollView>
    </ViewAnimator>
</RelativeLayout>
